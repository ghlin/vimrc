long long readLongLong(long long opt) { return scanf("%lld", &opt), opt; }
long long unsigned readLongLongUnsigned(long long unsigned opt) { return
scanf("%llu", &opt), opt; }

int main(void)
{
	$1

	return 0;
}

endsnippet

