#include <cstdio>
#include <cmath>
#include <cstring>
#include <cctype>
#include <climits>
#else
#include <stdio.h>
#include <math.h>
#include <string.h>
#include <stdbool.h>
#include <ctype.h>
#include <limits.h>
#endif

/*
 * @@@ compile: -DLOCAL_JUDGE=1
 */
#ifdef LOCAL_JUDGE
#define wtf(...) \
	do { fprintf(stderr, "%s, %d : ", __func__, __LINE__); \
			 fprintf(stderr, __VA_ARGS__); \
			 fprintf(stderr, "\n"); } while (0)
#else
#define wtf(...) do { } while (0)
#endif

